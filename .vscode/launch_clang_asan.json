{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with Clang ASan",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build_clang_asan/examples/multi_window_demo",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "ASAN_OPTIONS",
                    "value": "detect_leaks=0:abort_on_error=0:log_path=${workspaceFolder}/asan.log"
                }
            ],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: Build Clang ASan"
        }
    ]
}
